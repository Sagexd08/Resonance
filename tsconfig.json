{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "packages/shared/src/*"
            ],
            "@prisma/*": [
                "packages/prisma/src/*"
            ]
        },
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "apps/**/*",
        "packages/**/*"
    ],
    "references": [
        {
            "path": "apps/web"
        },
        {
            "path": "apps/api"
        },
        {
            "path": "packages/shared"
        },
        {
            "path": "packages/prisma"
        }
    ]
}